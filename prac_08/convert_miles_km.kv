BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            font_size: 48
            text: '34'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                text: 'Up'
            Button:
                text: 'Down'
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_conversion(input_number.text)
    Label:
        id: output_label
        text: app.distance_in_kilometres
        font_size: 48
        color: (1, 1, 0, 1)